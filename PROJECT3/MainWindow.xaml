        <StackPanel
            Width="815"
            Height="395">
            <StackPanel
                Canvas.Left="87"
                Width="813"
                Orientation="Horizontal" />
            <ListView
                x:Name="playList"
                Height="200"
                Margin="0,0,-5,0"
                Background="WhiteSmoke"
                MouseLeftButtonUp="playList_MouseLeftButtonUp">
                <ListView.View>
                    <GridView>
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                <Setter Property="Background" Value="#0D47A1" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderBrush" Value="{x:Null}" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Padding" Value="5" />
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>
                        <GridViewColumn
                            Width="250"
                            DisplayMemberBinding="{Binding Name}"
                            Header="Tên bài hát" />
                        <GridViewColumn
                            Width="180"
                            DisplayMemberBinding="{Binding Performer}"
                            Header="Ca Sĩ" />
                        <GridViewColumn
                            Width="120"
                            DisplayMemberBinding="{Binding Album}"
                            Header="Album" />
                        <GridViewColumn
                            Width="150"
                            DisplayMemberBinding="{Binding Duration}"
                            Header="Thời lượng" />
                        <GridViewColumn Width="100" Header="Xóa">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="ContextMenu" Value="{StaticResource SongEditInfo}" />
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu>
                                    <MenuItem Header="Print" />
                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
            <StackPanel
                Height="65"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="loadBtn"
                    Width="80"
                    Height="30"
                    Margin="5"
                    Background="{DynamicResource StrongContent}"
                    Click="loadBtn_Click"
                    Content="LOAD"
                    FontSize="{DynamicResource SmallFont}"
                    Foreground="{DynamicResource Font}" />
                <Button
                    x:Name="savebtn"
                    Width="80"
                    Height="30"
                    Margin="5"
                    Background="{DynamicResource StrongContent}"
                    Click="savebtn_Click"
                    Content="LƯU"
                    FontSize="{DynamicResource SmallFont}"
                    Foreground="{DynamicResource Font}" />
                <Button
                    x:Name="browserBtn"
                    Width="80"
                    Height="30"
                    Margin="10"
                    Background="#a00037"
                    Click="browserBtn_Click"
                    Content="THÊM"
                    FontSize="{DynamicResource SmallFont}"
                    Foreground="{DynamicResource Font}" />
                <Button
                    x:Name="deleteMulti"
                    Canvas.Left="410"
                    Canvas.Top="245"
                    Width="80"
                    Height="30"
                    Margin="5"
                    Background="#b61827"
                    Click="deleteMulti_Click"
                    Content="XÓA"
                    FontSize="{DynamicResource SmallFont}"
                    Foreground="{DynamicResource Font}" />
            </StackPanel>
            <Border
                Width="760"
                Height="105"
                Margin="24,0"
                Background="#FF01091E"
                BorderBrush="#FFADBDDB"
                BorderThickness="5"
                CornerRadius="20">
                <Canvas>
                    <Button
                        x:Name="stopBtn"
                        Canvas.Left="41"
                        Canvas.Top="62"
                        Width="50"
                        Height="50"
                        Click="stopBtn_Click"
                        Content="&lt;"
                        FontFamily="Webdings"
                        FontSize="25"
                        FontWeight="Bold"
                        Foreground="LightGreen"
                        Template="{StaticResource controlButtonTemplate}"
                        ToolTip="Stop" />
                    <Button
                        x:Name="prevBtn"
                        Canvas.Left="-26"
                        Canvas.Top="-26"
                        Width="65"
                        Height="65"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="prevBtn_Click"
                        ToolTip="Previous song">
                        <Image Source="resourses/previous.png" />
                    </Button>
                    <Button
                        x:Name="nextBtn"
                        Canvas.Left="95"
                        Canvas.Top="-26"
                        Width="65"
                        Height="65"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="nextBtn_Click"
                        ToolTip="Next song">
                        <Image Source="resourses/next.png" />
                    </Button>

                    <Button
                        x:Name="pauseBtn"
                        Canvas.Left="25"
                        Canvas.Top="-33"
                        Width="80"
                        Height="80"
                        Click="pauseBtn_Click"
                        Content=";"
                        FontFamily="Webdings"
                        FontSize="45"
                        FontWeight="Bold"
                        Foreground="LightGreen"
                        Template="{StaticResource controlButtonTemplate}"
                        ToolTip="Play" />
                    <Button
                        x:Name="playBtn"
                        Canvas.Left="25"
                        Canvas.Top="-33"
                        Width="80"
                        Height="80"
                        Click="playBtn_Click"
                        Content="4"
                        FontFamily="Webdings"
                        FontSize="55"
                        FontWeight="Bold"
                        Template="{StaticResource controlButtonTemplate}"
                        ToolTip="Play" />
                    <TextBlock
                        x:Name="txtSongTitle"
                        Canvas.Left="165"
                        Canvas.Top="18"
                        Width="438"
                        FontWeight="Bold"
                        Style="{DynamicResource LightContent}"
                        TextAlignment="Center" />
                    <ToggleButton
                        x:Name="shuffleBtn"
                        Canvas.Left="492"
                        Canvas.Top="-22"
                        Width="40"
                        Height="40"
                        BorderThickness="0"
                        Click="shuffleBtn_Click"
                        Style="{StaticResource ToggleButtonStyle1}">
                        <Image
                            Width="32"
                            Height="32"
                            Source="resourses/shuffle.png" />
                    </ToggleButton>
                    <Button
                        x:Name="allRepeat"
                        Canvas.Left="536"
                        Canvas.Top="-20"
                        Width="35"
                        Height="35"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Repeat_Click"
                        Style="{StaticResource ButtonStyleRepeat}"
                        ToolTip="Non Repeat">
                        <Image
                            Width="32"
                            Height="32"
                            Source="resourses/repeatAll.png" />
                    </Button>
                    <Button
                        x:Name="singleRepeat"
                        Canvas.Left="536"
                        Canvas.Top="-20"
                        Width="35"
                        Height="35"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Repeat_Click"
                        Style="{StaticResource ButtonStyleRepeat}"
                        ToolTip="Repeat All">
                        <Image
                            Width="32"
                            Height="32"
                            Source="resourses/repeatOne.png" />
                    </Button>
                    <Button
                        x:Name="noneRepeat"
                        Canvas.Left="536"
                        Canvas.Top="-20"
                        Width="35"
                        Height="35"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Repeat_Click"
                        Style="{StaticResource ButtonStyleRepeat}"
                        ToolTip="Repeat this song">

                        <Image
                            Width="32"
                            Height="32"
                            Source="resourses/Nonerepeat.png" />
                    </Button>

                    <StackPanel
                        Canvas.Left="608"
                        Canvas.Top="17"
                        Orientation="Horizontal">
                        <Button
                            x:Name="volumnDown"
                            Margin="0,0,4,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="volumnDown_Click">
                            <Button.ToolTip>
                                <ToolTip Content="Volume Down" />
                            </Button.ToolTip>
                            <Image
                                Width="18"
                                Height="18"
                                Source="resourses/volume-down.png" />
                        </Button>
                        <Slider
                            x:Name="volumnController"
                            Width="80"
                            Height="19"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            FontWeight="ExtraBold"
                            IsEnabled="True"
                            Maximum="6"
                            Minimum="0"
                            ValueChanged="volumnController_ValueChanged" />
                        <Button
                            x:Name="volumeUp"
                            Margin="4,0,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="volumeUp_Click">
                            <Button.ToolTip>
                                <ToolTip Content="Volume Up" />
                            </Button.ToolTip>
                            <Image
                                Width="18"
                                Height="18"
                                Source="resourses/volume-up.png" />
                        </Button>
                    </StackPanel>
                    <StackPanel
                        x:Name="playbackControlsHolder"
                        Canvas.Left="96"
                        Canvas.Top="62"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            x:Name="txtEllapsedTime"
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Foreground="{DynamicResource Font}"
                            Text="00:00:00" />
                        <Slider
                            x:Name="sliderProgress"
                            Width="453"
                            Margin="5,0,5,0"
                            Cursor="Hand"
                            FontWeight="ExtraBold"
                            IsEnabled="True"
                            Maximum="6"
                            Minimum="0"
                            Style="{StaticResource Horizontal_Slider}"
                            Thumb.DragStarted="sliderProgress_DragStarted"
                            ValueChanged="sliderProgress_ValueChanged" />
                        <TextBlock
                            x:Name="txtEndTime"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Foreground="{DynamicResource Font}"
                            RenderTransformOrigin="0.952,0.63"
                            Text="00:00:00" />
                    </StackPanel>
                </Canvas>
            </Border>

        </StackPanel>

    </Canvas>
</Window>
